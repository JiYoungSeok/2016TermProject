<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jiyoungseok.mylifelogger.TaskActivity"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:text="Task"
            android:id="@+id/button_Task"
            android:background="#82F9B7"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:text="Log"
            android:id="@+id/button_Log"
            android:background="#56B37F"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:text="Map"
            android:id="@+id/button_Map"
            android:background="#56B37F"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:text="Goal"
            android:id="@+id/button_Goal"
            android:background="#56B37F"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:orientation="vertical"
        android:background="#82F9B7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:background="#82F9B7">

            <TextView
                android:layout_width="240dp"
                android:layout_height="65dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"
                android:text=""
                android:gravity="center"
                android:id="@+id/textView_TodayDate"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="65dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:text="달력" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="65dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"
                android:text="Study"
                android:id="@+id/textView_WhatToDo"
                android:gravity="center"/>

            <!--<TextView-->
                <!--android:layout_width="120dp"-->
                <!--android:layout_height="65dp"-->
                <!--android:textStyle="bold"-->
                <!--android:textSize="20sp"-->
                <!--android:textColor="#000000"-->
                <!--android:text="00:00"-->
                <!--android:gravity="center"/>-->

            <Chronometer
                android:layout_width="120dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"
                android:gravity="center"
                android:id="@+id/chronometer"/>

            <Button
                android:layout_width="40dp"
                android:layout_height="65dp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="#FFFFFF"
                android:text="▶"
                android:id="@+id/button_Start"/>

            <Button
                android:layout_width="40dp"
                android:layout_height="65dp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="#B9062F"
                android:text="■"
                android:id="@+id/button_Stop"/>

            <Button
                android:layout_width="40dp"
                android:layout_height="65dp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="#800080"
                android:text="●"
                android:id="@+id/button_Reset"/>
        </LinearLayout>


    </LinearLayout>

