<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jiyoungseok.mylifelogger.TaskActivity"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:text="Task"
            android:id="@+id/button_Task"
            android:background="#56B37F"
            android:drawableTop="@drawable/stopwatch"
            android:onClick="onClickChangePage"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:text="Log"
            android:id="@+id/button_Log"
            android:background="#56B37F"
            android:drawableTop="@drawable/edit"
            android:onClick="onClickChangePage"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:text="Map"
            android:id="@+id/button_Map"
            android:background="#56B37F"
            android:drawableTop="@drawable/placeholder"
            android:onClick="onClickChangePage"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:text="Goal"
            android:id="@+id/button_Goal"
            android:drawableTop="@drawable/goal"
            android:background="#82F9B7"
            android:onClick="onClickChangePage"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#82F9B7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#82F9B7">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="50sp"
                android:text="나의 목표"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#AAFA82">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="50sp"
                android:text="나의 목표 달성 결과"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:text="목표설정"
                android:gravity="center"
                android:id="@+id/button_MakeGoal"
                android:background="#56B37F"
                android:onClick="onClickChangePage"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>