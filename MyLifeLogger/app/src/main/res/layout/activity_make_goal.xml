<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jiyoungseok.mylifelogger.MakeGoalActivity"
    android:orientation="vertical"
    android:background="#82F9B7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#56B37F">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="목표설정 하기"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="#82F9B7"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textStyle="bold"
            android:text="시작 날짜 : "
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="2016년 11월 31일"
            android:textColor="#787878"
            android:gravity="center"
            android:id="@+id/textView_StartDay"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/calendar"
            android:layout_marginRight="20dp"
            android:onClick="onClickStartCalendar"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="#82F9B7"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textStyle="bold"
            android:text="종료 날짜 : "
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="2016년 11월 31일"
            android:textColor="#787878"
            android:gravity="center"
            android:id="@+id/textView_EndDay"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/calendar"
            android:layout_marginRight="20dp"
            android:onClick="onClickEndCalendar"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="#82F9B7"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textStyle="bold"
            android:text="목표 항목 : "
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginLeft="20dp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#787878"
            android:gravity="center"
            android:entries="@array/항목"
            android:id="@+id/spinner"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="50dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="#82F9B7"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textStyle="bold"
            android:text="목표 시간 : "
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:inputType="number"
            android:textStyle="bold"
            android:textColor="#787878"
            android:gravity="center"
            android:id="@+id/editText_GoalTime"
            android:layout_marginLeft="20dp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.6"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="이상" />


            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="이하"/>
        </RadioGroup>
    </LinearLayout>
</LinearLayout>
